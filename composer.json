		"weavephp/adaptor-middleware": "^0.0.4",
		"psr/log": "~1.0"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.0",
		"phpunit/phpunit": "^9.0",
		"phan/phan": "^5.0"
