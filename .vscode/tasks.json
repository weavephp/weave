	"version": "2.0.0",
	"tasks": [
		{
			"label": "Composer update",
			"type": "shell",
			"command": "composer update",
			"problemMatcher": []
		},
		{
			"label": "PHPUnit",
			"type": "shell",
			"group": "test",
			"command": "composer run phpunit",
			"problemMatcher": ["$eslint-stylish"],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	]
}